extends ../layout/base
block content
    section.content-header
        h1
            | Tambah Data
            small Penduduk
    section.content
        .box
            .box-header.with-border
                h3.box-title
                    | Form pengisian data
                .box-tools.pull-right
                    button(type='button', data-widget='collapse', datatoggle='tooltip',title='collapse').btn.btn-box-tool
                        i.fa.fa-minus

            .box-body
                form(role='form',method='post' action='/penduduk/add')
                    .row

                        .col-xs-6
                            .box-body
                                - if (messages.msg_error)
                                    .alert.alert-danger.alert-dismissable
                                        button.close(type='button', datadismiss='alert', aria-hidden='true')
                                            | Ã—
                                        h4
                                            i.icon.fa.fa-ban
                                            | Alert!
                                        | !{messages.msg_error}
                                .form-group
                                    label
                                        | Nama
                                    input(type='text',value='#{nama}',name='nama',placeholder='Enter Nama', autofocus).form-control
                                .form-group
                                    label
                                        | Alamat
                                    input(type='text',name='alamat',placeholder='Enter alamat').form-control
                                .form-group
                                    label
                                        | Jenis Kelamin
                                    input(type='text',value='#{jk}',name='jk',placeholder='Enter jk').form-control
                                .form-group
                                    label
                                        | Umur
                                    input(type='text',name='umur',placeholder='Enter umur').form-control
                                .box-footer
                                    button(type='submit').btn.btn-primary
                                        | Submit
                                    a(href='/penduduk').btn.btn-primary.pullright
                                        | Back