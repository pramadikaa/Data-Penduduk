extends ../layout/base
block content
    section.content-header
        h1
            | Edit Data
            small Penduduk
    section.content
        .box
            .box-header.with-border
                h3.box-title
                    | Form ubah data
            .box-tools.pull-right
                button(type='button', data-widget='collapse', datatoggle='tooltip',title='collapse').btn.btn-box-tool
                    i.fa.fa-minus

            .box-body
                form(role='form',method='post' action='/penduduk/edit/#{(id==undefined) ? data.id : id}')
                    .row

                        .col-xs-6
                            .box-body
                                - if (messages.msg_error)
                                    .alert.alert-danger.alert-dismissable
                                        button.close(type='button', datadismiss='alert', aria-hidden='true')
                                            | ×
                                        h4
                                            i.icon.fa.fa-ban
                                            | Alert!
                                        | !{messages.msg_error}
                                - if (messages.msg_info)
                                    .alert.alert-success.alertdismissable
                                        button.close(type='button', datadismiss='alert', aria-hidden='true')
                                            | ×
                                        h4
                                            i.icon.fa.fa-ban
                                            | Success!
                                        | !{messages.msg_info}
                                .form-group
                                    label
                                        | Nama
                                    input(type='text',value="#{data.nama}",name='nama',placeholder='Enter nama', autofocus).form-control
                                .form-group
                                    label
                                        | Alamat
                                    input(type='text',value="#{ (alamat == undefined) ? data.alamat : alamat }",name='alamat',placeholder='Enter alamat').form-control
                                .form-group
                                    label
                                        | Jenis Kelamin
                                    input(type='text',value="#{ (jk ==undefined) ? data.jk : jk }",name='jk',placeholder='Enter jk').form-control
                                .form-group
                                    label
                                        | Umur
                                    input(type='text',value="#{ (umur ==undefined) ? data.umur : umur }",name='umur',placeholder='Enter umur').form-control
                               .box-footer
                                input(type="hidden",name="_method", value="PUT")
                                button(type='submit').btn.btn-primary
                                    i.fa.fa-pencil
                                    | Edit
                                a(href='/penduduk').btn.btn-primary.pullright
                                    | Back